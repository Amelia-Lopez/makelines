<?xml version="1.0" encoding="UTF-8"?>
<config>
    <menus size="1">
        <menu name="Make Lines" mnemonic="VK_T" size="4">
            <item name="New Game"
                mnemonic="VK_N"
                type="JMenuItem"
                action="amylopez.makelines.controller.input.action.NewGameAction" />
            <item name="Pause"
                mnemonic="VK_P"
                type="JMenuItem"
                action="amylopez.makelines.controller.input.action.PauseGameAction">
                <message type="image">
                    <image file="/textures/paused.png" />
                </message>
            </item>
            <item name="Abort Game"
                 mnemonic="VK_A"
                 type="JMenuItem"
                 action="amylopez.makelines.controller.input.action.AbortGameAction">
                 <message type="image">
                     <image file="/textures/gameover.png" />
                 </message>
            </item>
            <item name="Quit"
                mnemonic="VK_Q"
                type="JMenuItem"
                action="amylopez.makelines.controller.input.action.QuitAction" />
        </menu>
        <!--<menu name="Options" mnemonic="VK_O">
            <item name="Show High Scores"
                mnemonic="VK_H"
                type="JMenuItem"
                action="amylopez.makelines.action.ShowHighScoresAction" />
            <item name="Accelerated Left/Right"
                mnemonic="VK_A"
                type="JCheckBoxMenuItem"
                action="amylopez.makelines.action.AcceleratedMotionToggleAction" />
        </menu> -->
    </menus>
</config>