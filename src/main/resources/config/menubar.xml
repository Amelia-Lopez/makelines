<?xml version="1.0" encoding="UTF-8"?>
<config>
	<menus size="1">
		<menu name="Tetris" mnemonic="VK_T" size="3">
			<item name="New Game"
				mnemonic="VK_N"
				type="JMenuItem"
				action="com.mm.tetris.controller.input.action.NewGameAction" />
			<item name="Pause"
				mnemonic="VK_P"
				type="JMenuItem"
				action="com.mm.tetris.controller.input.action.PauseGameAction">
                <message type="image">
                    <image file="/textures/paused.png" />
                </message>
            </item>
			<item name="Quit"
				mnemonic="VK_Q"
				type="JMenuItem"
				action="com.mm.tetris.controller.input.action.QuitAction" />
		</menu>
