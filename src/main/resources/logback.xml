<configuration debug="false">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level [%thread] %+36logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="amylopez.makelines.audio" level="debug"/>
  <logger name="amylopez.makelines.board" level="info"/>
  <logger name="amylopez.makelines.controller" level="info"/>
  <logger name="amylopez.makelines.controller.input" level="info"/>
  <logger name="amylopez.makelines.controller.input.action.gameplay" level="info"/>
  <logger name="amylopez.makelines.gui" level="info"/>
  <logger name="amylopez.makelines.score.impl" level="info"/>
  <logger name="amylopez.makelines.util" level="info"/>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>

</configuration>